.page-container {
  min-height: 100vh;
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  /* background: #4a90e2; */
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 30rpx;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back image {
  width: 64rpx;
  height: 64rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #000000;
  margin-left: 10rpx;
}


/* 头部卡片 */
.header-card {
  background: #296bfa;
  padding: 30rpx;
  padding-bottom: 40rpx;
  margin-top: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
}

.doctor-info-left {
  flex: 1;
  color: #fff;
  padding-right: 20rpx;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.doctor-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.cert-badge {
  width: 40rpx;
  height: 40rpx;
}

.title-dept {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  opacity: 0.95;
}

.separator {
  margin: 0 12rpx;
}

.intro-text {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.9;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.tag-item {
  font-size: 16rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 18rpx;
}

/* 数据统计 */
.stats-row {
  display: flex;
  gap: 50rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

.stat-num {
  font-size: 28rpx;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 300;
  opacity: 0.8;
}

/* 医生头像 */
.doctor-avatar-wrap {
  width: 320rpx;
  height: 440rpx;
  flex-shrink: 0;
  margin-top: -50rpx;
  position: relative;
  z-index: 10;
}

.doctor-avatar {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 操作栏 */
.action-bar {
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
  background: linear-gradient(180deg, #296bfa 0%, #fff 100%);
  padding: 24rpx 24rpx;
  margin: 0;
  border-radius: 32rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
  margin-top: -30rpx;
  border: 2rpx solid #f5f5f5;
}

.action-item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.action-icon {
  width: 72rpx;
  height: 72rpx;
}

.follow-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}

.follow-icon {
  width: 150rpx;
  height: 72rpx;
}

/* 他的创作 */
.creation-section {
  padding: 40rpx 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  /* border: 2rpx solid red; */
  background: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
  display: inline-block;
  width: 100%;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #296bfa;
  border-radius: 3rpx;
}

.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.video-cover-wrap {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.video-cover {
  width: 100%;
  height: 100%;
}

.video-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #4a90e2;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.video-title-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60rpx 20rpx 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.3;
}

.video-info {
  padding: 20rpx;
}

.video-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video-author {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.author-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.author-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.like-info {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.like-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}
