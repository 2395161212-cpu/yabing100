/* pages/doctor-certification/doctor-certification.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  color: #fff;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

.form-section {
  margin-top: 20rpx;
  padding: 0 30rpx;
  padding-bottom: 100rpx;
}

.form-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input::-webkit-input-placeholder {
  color: #bbb;
}

.form-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-placeholder {
  font-size: 28rpx;
  color: #bbb;
}

.picker-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

.textarea-item {
  padding-bottom: 20rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.form-textarea::-webkit-input-placeholder {
  color: #bbb;
}

.textarea-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.photo-item {
  padding-bottom: 40rpx;
}

.photo-upload {
  width: 100%;
  height: 360rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d0d0d0;
}

.photo-preview {
  width: 100%;
  height: 100%;
}

.photo-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.tips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.tips-icon {
  font-size: 26rpx;
  margin-right: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

