/* pages/home/home.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

/* Banner 样式 */
.banner {
  height: 242rpx; 
  margin: 16rpx 16rpx 0 16rpx; 
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 金刚位样式 */
.icon-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx 0 20rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 96rpx; /* 48px = 96rpx */
  height: 96rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nav-icon-img {
  width: 56rpx; /* 28px = 56rpx */
  height: 56rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 视频区域样式 */
.video-section {
  background-color: #fff;
  padding: 20rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  overflow: hidden;
  min-height: calc(100vh - 242rpx - 160rpx);
}

/* 分类标签样式 */
.category-tabs {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  background-color: #F5F5F5;
  color: #666;
  font-size: 24rpx;
  flex-shrink: 0;
}

.category-item.active {
  background-color: #1890ff;
  color: #fff;
}

/* 视频列表 - 双排布局 */
.video-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video-item {
  width: calc(50% - 8rpx); /* 一行两个，间距 8px = 16rpx，每个占 50% - 8rpx */
  max-height: 520rpx; /* 260px = 520rpx */
  margin-bottom: 16rpx; /* 8px = 16rpx */
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.video-cover {
  width: 100%;
  height: 380rpx; /* 190px = 380rpx */
  display: block;
}

.video-info {
  padding: 12rpx;
}

.video-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.video-author {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.author-avatar {
  width: 44rpx; /* 22px = 44rpx */
  height: 44rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.author-name {
  font-size: 22rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video-likes {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.like-icon {
  width: 16rpx; /* 8px = 16rpx */
  height: 16rpx;
  margin-right: 4rpx;
}

.likes-count {
  font-size: 22rpx;
  color: #999;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

