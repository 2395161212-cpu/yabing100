/* pages/home/home.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

/* Banner 样式 */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 金刚位样式 */
.icon-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 26rpx;
  color: #333;
}

/* 视频区域样式 */
.video-section {
  background-color: #fff;
  padding: 20rpx;
  min-height: calc(100vh - 300rpx - 160rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

/* 视频列表 - 双排布局 */
.video-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.video-cover {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.video-duration {
  position: absolute;
  bottom: 210rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
}

.video-info {
  padding: 16rpx;
}

.video-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  height: 78rpx;
  margin-bottom: 8rpx;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.video-author {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video-views {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

