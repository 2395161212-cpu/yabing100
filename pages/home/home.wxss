.container {
  height: 100vh;
  background-color: #ebeffa;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9998;
  border-bottom: 1px solid #e6e6e6;
}

.navbar-content {
  height: 44px;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.navbar-logo {
  width: 230rpx;
  height: 48rpx;
}

/* Banner 样式 */
.banner {
  height: 242rpx; 
  margin: 16rpx 16rpx 0 16rpx; 
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 金刚位样式 */
.icon-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx 0 20rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 96rpx; /* 48px = 96rpx */
  height: 96rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nav-icon-img {
  width: 56rpx; /* 28px = 56rpx */
  height: 56rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 400;
}

.nav-text.active {
  font-weight: bold;
  color: #000;
}

/* 空状态 */
.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 医生列表样式 */
.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.doctor-card-item {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  gap: 24rpx;
  height: 236rpx;
}

.doctor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: #f0f0f0;
}

.doctor-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.doctor-title-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.doctor-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  flex-shrink: 0;
}

.doctor-badge {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.doctor-title-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.doctor-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.doctor-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  color: #1976D2;
  font-size: 20rpx;
  border-radius: 16rpx;
  font-weight: 400;
  line-height: 1.4;
  transform: scale(0.9);
  transform-origin: left center;
}

.doctor-intro {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 视频区域样式 */
.video-section {
  background-color: #f8f8f8;
  padding: 20rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  overflow: hidden;
  min-height: calc(100vh - 242rpx - 160rpx);
}

/* 分类标签样式 */
.category-tabs {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  background-color: #fff;
  color: #666;
  font-size: 24rpx;
  flex-shrink: 0;
}

.category-item.active {
  background-color: #1890ff;
  color: #fff;
}

/* 视频列表 - 双排布局 */
.video-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video-item {
  width: calc(50% - 8rpx); /* 一行两个，间距 8px = 16rpx，每个占 50% - 8rpx */
  max-height: 520rpx; /* 260px = 520rpx */
  margin-bottom: 16rpx; /* 8px = 16rpx */
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.video-cover {
  width: 100%;
  height: 380rpx; /* 190px = 380rpx */
  display: block;
}

.video-info {
  padding: 12rpx;
}

.video-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.video-author {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.author-avatar {
  width: 44rpx; /* 22px = 44rpx */
  height: 44rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.author-name {
  font-size: 22rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video-likes {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.like-icon {
  width: 16rpx; /* 8px = 16rpx */
  height: 16rpx;
  margin-right: 4rpx;
}

.likes-count {
  font-size: 22rpx;
  color: #999;
}
