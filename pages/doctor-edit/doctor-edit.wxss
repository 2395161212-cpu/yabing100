/* pages/doctor-edit/doctor-edit.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

/* 医生头像卡片 */
.doctor-header {
  background: #fff;
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.doctor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #3B82F6;
  margin-bottom: 24rpx;
}

.doctor-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.doctor-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.verify-badge {
  width: 44rpx;
  height: 44rpx;
}

.edit-avatar-btn {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

/* 信息区块 */
.info-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0;
}

.info-item {
  display: flex;
  align-items: center;
  min-height: 88rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

/* 区块标题 */
.section-title-wrapper {
  padding: 32rpx 40rpx 16rpx;
  background: transparent;
}

.section-title {
  font-size: 28rpx;
  color: #999;
}

.info-label {
  font-size: 30rpx;
  color: #333;
  min-width: 100rpx;
  flex-shrink: 0;
}

.info-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
  overflow: hidden;
}

.info-value {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.arrow-right {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
  flex-shrink: 0;
}

.edit-input {
  flex: 1;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}


/* 保存按钮区域 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  z-index: 999;
}

.save-all-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 88rpx;
  padding: 0;
  border: none;
}

.save-all-btn::after {
  border: none;
}

.save-all-btn:active {
  opacity: 0.9;
}

