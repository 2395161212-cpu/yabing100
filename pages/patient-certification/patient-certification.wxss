/* pages/patient-certification/patient-certification.wxss */
page {
  background: linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%);
}

.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

.header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.form-section {
  padding: 0 30rpx;
}

.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #e8ebf5;
}

.form-input::-webkit-input-placeholder {
  color: #bbb;
}

.benefits-section {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.benefits-title {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.benefit-icon {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.benefit-text {
  font-size: 28rpx;
  color: #666;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.tips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.tips-icon {
  font-size: 26rpx;
  margin-right: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

