.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
  padding-bottom: 140rpx;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back image {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.nav-placeholder {
  width: 60rpx;
}

/* 主体内容 */
.content-area {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

/* 通用区块样式 */
.upload-section,
.title-section,
.category-section,
.tips-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3a5f;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 3rpx;
}

.section-tip {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 上传区域 */
.upload-box {
  border: 3rpx dashed #93c5fd;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 100%);
  transition: all 0.3s;
}

.upload-box:active {
  background: linear-gradient(180deg, #e0f2fe 0%, #bae6fd 100%);
  border-color: #3b82f6;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.icon-plus {
  font-size: 64rpx;
  color: #fff;
  font-weight: 300;
}

.upload-text {
  font-size: 32rpx;
  color: #1e40af;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 26rpx;
  color: #64748b;
}

/* 视频预览 */
.video-preview {
  border-radius: 16rpx;
  overflow: hidden;
  background: #000;
}

.preview-video {
  width: 100%;
  height: 400rpx;
}

.video-info-bar {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #1e293b;
}

.video-duration,
.video-size {
  font-size: 24rpx;
  color: #94a3b8;
}

.change-video {
  text-align: center;
  padding: 20rpx;
  background: #f8fafc;
}

.change-video text {
  font-size: 28rpx;
  color: #3b82f6;
}

/* 标题输入 */
.char-count {
  font-size: 26rpx;
  color: #64748b;
}

.char-count.over-limit {
  color: #ef4444;
}

.title-input-wrap {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid #e2e8f0;
  transition: border-color 0.3s;
}

.title-input-wrap:focus-within {
  border-color: #3b82f6;
}

.title-input {
  width: 100%;
  font-size: 30rpx;
  color: #334155;
  line-height: 1.6;
  min-height: 80rpx;
}

.placeholder-text {
  color: #94a3b8;
  font-size: 28rpx;
}

/* 分类选择 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.category-item {
  padding: 16rpx 32rpx;
  background: #f1f5f9;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #475569;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1d4ed8;
  border-color: #3b82f6;
  font-weight: 500;
}

/* 温馨提示 */
.tips-section {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: none;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #92400e;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.6;
}

/* 底部发布按钮 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.publish-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.publish-btn.active {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
}

.publish-btn.disabled {
  background: #e2e8f0;
  color: #94a3b8;
}

.publish-btn.active:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

