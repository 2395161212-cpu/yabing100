/* pages/profile/profile.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 用户信息区域 */
.user-info-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 100rpx;
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 30rpx;
  background-color: rgba(255, 255, 255, 0.1);
}

.user-detail {
  display: flex;
  flex-direction: column;
  color: #fff;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 26rpx;
  opacity: 0.8;
}

.login-btn {
  margin-top: 40rpx;
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50rpx;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0;
  font-weight: 500;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background-color: rgba(255, 255, 255, 0.4);
}

/* 功能菜单区域 */
.menu-section {
  margin-top: 10rpx;
  padding: 0 30rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 35rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}

/* 退出登录文字颜色 */
.logout-text {
  color: #ff4d4f;
}
