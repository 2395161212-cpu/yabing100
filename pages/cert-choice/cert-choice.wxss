/* pages/cert-choice/cert-choice.wxss */
page {
  background: linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%);
}

.container {
  min-height: 100vh;
  padding: 60rpx 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 80rpx;
}

.cert-options {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.cert-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s;
}

.cert-card:active {
  transform: scale(0.98);
}

.cert-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin: 0 auto 32rpx;
}

.cert-icon.doctor {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.cert-icon.patient {
  background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
}

.cert-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.cert-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 32rpx;
}

.cert-benefits {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: #f8f9ff;
  border-radius: 20rpx;
}

.benefit-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.cert-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.doctor-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.patient-btn {
  background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
}

.arrow {
  margin-left: 12rpx;
  font-size: 36rpx;
}

.tips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  padding: 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #667eea;
}

